<% include ../header.ejs %>
    
    <div class="panel panel-default">
        <input type="hidden" name="_csrf" value="<%=csrfToken%>" />
        <div class="panel-heading">
            <%=contact.name%>
        </div>
        <div class="panel-body">
            <div style="padding-bottom: 10px">
                작성일 : 
                <%=contact.getDate.year%>
                <%=contact.getDate.month%>
                <%=contact.getDate.day%>
            </div>

            <!-- 썸네일 뿌려줄 필드 추가-->
            <% if(contact.thumbnail){%>
            <p>
            <img src="/clients/<%=contact.thumbnail%>" style="max-width: 100%"/>
            </p>
            <% } %>

            <!-- 뷰 페이지에서도 html태그가 동작되도록 작성-->    
            <%-contact.contents%>

            <!-- 댓글영역  -->

        </div>
    </div>

    <a href="/contacts" class="btn btn-default">목록으로</a>
    <a href="/contacts/edit/<%=contact.id%>" class="btn btn-primary">수정</a>       


<% include ../footer.ejs %>